pipeline {
    agent any

    parameters {
        choice(
            name: 'environment',
            choices: ['default', 'prod'],
            description: 'Workspace/environment file to use for deployment'
        )
        booleanParam(name: 'autoApprove', defaultValue: false, description: 'Automatically run apply after generating plan?')
    }

    environment {
      AWS_DEFAULT_REGION="us-east-1"
      THE_BUTLER_SAYS_SO=credentials('aws-creds')
    }

    stages {
        stage('Create Terraform Workspace') {
            steps {
                sh 'terraform workspace new prod || true'
                sh 'terraform workspace select ${environment}'
            }
        }

        stage('Plan') {
            steps {
                script {
                    ""
                }
                sh 'terraform init -input=false'
                sh "terraform plan -input=false -out tfplan --var-file=environments/${params.environment}.tfvars"
                sh 'terraform show -no-color tfplan > tfplan.txt'
            }
        }
    
        stage('Approval') {
            when {
                not {
                    equals expected: true, actual: params.autoApprove
                }
            }

            steps {
                script {
                    def plan = readFile 'tfplan.txt'
                    input message: "Do you want to apply the plan?",
                        parameters: [text(name: 'Plan', description: 'Please review the plan', defaultValue: plan)]
                }
            }
        }

        stage('Apply') {
            steps {
                sh "terraform apply -input=false tfplan"
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'tfplan.txt'
        }
    }
}
